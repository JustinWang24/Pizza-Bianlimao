<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hippo_app_checkout_view_wrap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/hippo_payment_failed"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_cancel_checkout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="525dp"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_toolbar_cancel_checkout_text"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="32sp" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <!-- 产品名称 -->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_product_name_in_payment_failed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="680dp"
        android:textSize="44sp" />
    <!-- 重新购买按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1560dp"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/tv_back_to_products_list_in_payment_failed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/hippo_reorder_button"
            android:gravity="center"
            android:paddingBottom="8dp"/>
    </LinearLayout>
</RelativeLayout>