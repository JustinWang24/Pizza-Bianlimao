<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bottom"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_alignParentBottom="true"
    android:baselineAligned="true"
    android:layout_marginBottom="240dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_delivery_code"
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="40sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_shop_cart_in_product_list"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:paddingBottom="5dp">

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/icon_shop_cart_in_product_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_shopping_cart_text_in_product_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <com.example.smartbroecommerce.main.product.CircleTextView
            android:id="@+id/tv_shopping_cart_amount_in_product_list"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/icon_shop_cart_in_product_list"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/icon_shop_cart_in_product_list"
            android:layout_marginRight="160dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_help_wrap"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@android:color/holo_orange_dark"
        android:gravity="center_horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/rl_help_section_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/text_cart_empty_text"
            android:textColor="@android:color/white"
            android:textSize="24sp"/>

    </RelativeLayout>

</android.support.v7.widget.LinearLayoutCompat>